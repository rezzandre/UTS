<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rezzandre.superkontak.Detail"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:text="Detail Kontak :"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/Telp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Telp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="110dp" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim Email"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="230dp"
        android:onClick="send_email"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim SMS"
        android:onClick="send_sms"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="230dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Panggil Telp"
        android:onClick="send_call"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="309dp" />
</LinearLayout>
